MODULE_SUPPORT=true
MODULE_MARKETPLACE=true
MODULE_PAYMENT=true

# --- API & intégrations ---
API_ENABLED=true
API_KEY=change_me_in_production
API_RATE_LIMIT=1000

# --- Paiement & facturation ---
PAYMENT_ENABLED=true
PAYMENT_PROVIDER=stripe
PAYMENT_CURRENCY=EUR
INVOICE_AUTO=true

# --- Email & notifications ---
MAIL_DRIVER=smtp
MAIL_HOST=localhost
